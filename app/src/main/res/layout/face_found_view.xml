<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/face_info_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_previewImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:src="@drawable/user" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/baseline_double_arrow_24"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_savedImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:src="@drawable/user" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_face_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:text="1 match found"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>